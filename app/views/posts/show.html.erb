<div class="postshow">
  <div class="postimage">
    <%= image_tag @post.image%>
  </div>
  <div class="postname">
    NAME:
    <%= @post.name %>
  </div>
  <div class="posttitle">
    <%= @post.text%>
  </div>
  <div class="posttime">
    <%= @post.created_at.strftime("%Y-%m-%d") %>
  </div>

  <div class="return-p">
    <%= link_to  posts_path do %>
    <i class="fa fa-arrow-left"></i>
    <span>投稿一覧へ戻る</span>
    <% end %>
  </div>

</div>